"""Wrapper to run linters and pytest with the right settings."""

import os
import subprocess
import sys
import pytest


def run_linters():
    """Returns the exit code from linting with black and flake8."""
    dirpath = os.path.dirname(os.path.realpath(__file__))
    black_ret = subprocess.run(
        [sys.executable, "-m", "black", "--check", dirpath], check=False
    ).returncode
    if black_ret != 0:
        return black_ret
    return subprocess.run(
        [sys.executable, "-m", "flake8", dirpath], check=False
    ).returncode


def main(argv):
    """The main entry."""
    pytest_ret = pytest.main(argv)
    linter_ret = run_linters()
    return 0 if not linter_ret and not pytest_ret else 1


if __name__ == "__main__":
    sys.exit(main(sys.argv[1:]))
